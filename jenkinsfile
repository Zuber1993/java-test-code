pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
               sh 'mvn clean install -DskipTests' 
            }
        }
        stage('Check-target') {
           steps{
              sh '''
                  cd target
                  ls -l
                 '''
                }
          }
          
       stage('Run'){
          steps{
            sh 'mvn exec:java -Dexec.mainClass=com.javacodegeeks.quartz.QuartzSchedulerPropertiesExample'
            }
        }
    }
    
}
